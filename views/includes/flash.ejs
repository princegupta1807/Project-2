<!-- Flash Success Includes -->
<% if (success && success.length) { %>
<div
  class="alert alert-success alert-dismissible fade show col-4 offset-4"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
<!-- As we don't want an empty alert msg to be seen on home page becoz success is an empty array, so to achieve our goal we use success.length(which is 0) to not get empty alert msg -->

<!-- Flash Failure(Error) Includes  -->
<% if (error && error.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show col-4 offset-4"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
